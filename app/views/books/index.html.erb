<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>


<h1>Books</h1>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%=link_to "show", book_path(book.id)%></td>
      <td><%=link_to "edit", edit_book_path(book.id)%></td>
      <td><%=link_to "delete", book_path(book.id),method: :delete %></td>
    </tr>
    <% end%>
  </thead>
</table>





<h1>新規投稿</h1>
<%= form_for(@book) do |f| %>

  <div><h4>Title</h4>
  <%= f.text_field :title %></div>


  <div><h4>Body</h4>
  <%= f.text_area :body %></div>

  <%= f.submit 'Create Book' %>

<% end %>