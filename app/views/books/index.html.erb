<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>


<h1>Books</h1>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%=link_to "Show", book_path(book.id)%></td>
      <td><%=link_to "Edit", edit_book_path(book.id)%></td>
      <td><%=link_to "Destroy", book_path(book.id),method: :delete %></td>
    </tr>
    <% end%>
  </thead>
</table>





