<h1>新規投稿</h1>
<%= form_for(@book) do |f| %>

	<h4>本のタイトル</h4>
	<%= f.text_field :title %>
	<% if @book.errors.messages[:body].any? %>
	<span class="error"><%= @post.errors.messages[:title][0] %></span>
	<% end %>

	<h4>本の感想</h4>
	<%= f.text_area :body %>
	<%= f.submit '投稿' %>
	<% if @book.errors.messages[:title].any? %>
	<span class="error"><%= @post.errors.messages[:title][0] %></span>
<% end %>